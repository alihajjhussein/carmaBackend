script.
  $(function() {
    $('#credit-card-form').submit(function(e) {
      e.preventDefault();
      $.ajax({
        url: '/process-payment',
        type: 'POST',
        data: $(this).serialize(),
        success: function(response) {
          $('#result').html(response.message);
        },
        error: function(jqXHR, textStatus, errorThrown) {
          $('#result').html('Error: ' + errorThrown);
        }
      });
    });
  });

doctype html
html
  head
    meta(charset='utf-8')
    title Credit Card Information
    style.
      body {
        font-family: Arial, sans-serif;
      }
      label {
        display: inline-block;
        margin-bottom: 5px;
        font-weight: bold;
      }
      input[type='text'] {
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
      }
      input[type='submit'] {
        padding: 5px 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
      }
      input[type='submit']:hover {
        background-color: #45a049;
      }
  body
    h1 Enter Credit Card Information
    form#credit-card-form
      label(for='card-number') Card Number:
      input(type='text', id='card-number', name='cardNumber', placeholder='xxxx-xxxx-xxxx-xxxx')
      br
      label(for='cvv') CVV:
      input(type='text', id='cvv', name='cvv', placeholder='xxx')
      br
      label(for='cardholder-name') Cardholder Name:
      input(type='text', id='cardholder-name', name='cardholderName', placeholder='John Doe')
      br
      label(for='expiration-month') Expiration Month:
      input(type='text', id='expiration-month', name='expirationMonth', placeholder='MM')
      br
      label(for='expiration-year') Expiration Year:
      input(type='text', id='expiration-year', name='expirationYear', placeholder='YYYY')
      br
      input(type='submit', value='Submit')
    div#result
